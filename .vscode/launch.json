{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agent Server",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/linggen-agent",
      "preLaunchTask": "cargo build agent",
      "args": ["serve", "--dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "info",
        "PATH": "${env:HOME}/.cargo/bin:${env:PATH}"
      },
      "sourceLanguages": ["rust"]
    },
    {
      "name": "Agent UI",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/ui",
      "preLaunchTask": "npm: dev - agent ui"
    }
  ]
}
