{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agent Server",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/ling",
      "preLaunchTask": "build agent all",
      "args": ["--web", "--dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "info",
        "PATH": "${env:HOME}/.cargo/bin:${env:PATH}"
      },
      "sourceLanguages": ["rust"]
    },
    {
      "name": "Agent UI",
      "type": "chrome",
      "request": "launch",
      "runtimeArgs": [
        "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug"
      ],
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/ui",
      "preLaunchTask": "build and dev agent ui"
    }
  ],
  "compounds": [
    {
      "name": "Agent Server + UI",
      "configurations": ["Agent Server", "Agent UI"],
      "stopAll": true
    }
  ]
}
